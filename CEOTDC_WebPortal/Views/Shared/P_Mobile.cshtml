@{
    var SupplierInfo = ViewBag.SupplierInfo as CEOTDC_WebPortal.Models.M_Supplier;
    var newsCategory = ViewBag.NewsCategory as List<M_NewsCategory>;
    var memberCategory = ViewBag.MemberCategory as List<M_Major>;
    var newsList = newsCategory.Where(x => x.typeId == (int)EN_NewsCategoryTypeId.News).OrderBy(x => x.reOrder).ToList();
    var introduceList = newsCategory.Where(x => x.typeId == (int)EN_NewsCategoryTypeId.Introduce).OrderBy(x => x.reOrder).ToList();
    var serviceList = newsCategory.Where(x => x.typeId == (int)EN_NewsCategoryTypeId.Service).OrderBy(x => x.reOrder).ToList();
    var libraryCategory = ViewBag.LibraryCategory as List<M_DocumentSubject>;
}
<div class="offcanvas offcanvas-end offcanvas-mobile" id="offcanvasMobileMenu" style="background-image: url('https://images.pexels.com/photos/1036372/pexels-photo-1036372.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1'); ">
    <div class="offcanvas-header bg-white">
        <div class="offcanvas-logo">
            <a class="offcanvas-logo__logo" href="/"><img src="@SupplierInfo.imageObj?.smallUrl" alt="Logo"></a>
        </div>
        <button type="button" class="offcanvas-close" data-bs-dismiss="offcanvas"><i class="fal fa-times"></i></button>
    </div>

    <div class="offcanvas-body">
        <nav class="canvas-menu">
            <ul class="offcanvas-menu main-menu">
                <li>
                    <a class="btn_a" href="/"><span>Trang chủ</span></a>
                </li>
                <li>
                    <a class="btn_a" href="/gioi-thieu"><span>Giới thiệu</span></a>
                    <ul class="sub-menu">
                        @if (introduceList != null)
                        {
                            foreach (var item in introduceList)
                            {
                                <li><a class="btn_a child" href="/gioi-thieu?c=@item.id"><span>@item.name</span></a></li>
                            }
                        }
                        <li><a href="/so-do-to-chuc"><span>Sơ đồ tổ chức</span></a></li>
                    </ul>
                </li>
                <li>
                    <a class="btn_a" href="/hoat-dong"><span>Hoạt động</span></a>
                </li>
